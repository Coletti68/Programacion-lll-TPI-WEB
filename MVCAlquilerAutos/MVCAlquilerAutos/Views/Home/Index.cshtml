@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center bg-dark text-white py-5" style="background-image: url('/img/fondo.jpeg'); background-size: cover; background-position: center;">
    <h1 class="display-4">Bienvenido al Panel de Administración</h1>
    <p class="lead">Gestioná vehículos, usuarios y alquileres desde un solo lugar</p>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Vehiculos")" class="text-decoration-none">
                <div class="card shadow-sm panel-card">
                    <div class="card-body">
                        <h5 class="card-title">Vehículos</h5>
                        <p class="card-text">Gestioná el inventario de autos</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Usuario")" class="text-decoration-none">
                <div class="card shadow-sm panel-card">
                    <div class="card-body">
                        <h5 class="card-title">Usuarios</h5>
                        <p class="card-text">Administrá los usuarios registrados</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Alquiler")" class="text-decoration-none">
                <div class="card shadow-sm panel-card">
                    <div class="card-body">
                        <h5 class="card-title">Alquileres</h5>
                        <p class="card-text">Controlá las reservas y alquileres</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("Index", "Contacto")" class="text-decoration-none">
                <div class="card shadow-sm panel-card">
                    <div class="card-body">
                        <h5 class="card-title">Mensajes de usuarios</h5>
                        <p class="card-text">Respondé los mensajes enviados desde la APP.</p>
                       
                    </div>

                </div>
            </a>
        </div>
        <div class="col-md-3">
                <a href="@Url.Action("Index", "Multa")" class="text-decoration-none">
                    <div class="card shadow-sm panel-card">
                        <div class="card-body">
                            <h5 class="card-title">Multas</h5>
                            <p class="card-text">Revisa y asigna multas a los usuarios/alquileres.</p>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .panel-card {
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .panel-card:hover {
            background-color: #343a40;
            color: white;
        }

            .panel-card:hover .btn-outline-dark {
                background-color: white;
                color: #343a40;
                border-color: white;
            }
</style>