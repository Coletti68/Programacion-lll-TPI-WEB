@model MVCAlquilerAutos.Models.Vehiculo

@{
    ViewData["Title"] = "Editar Vehículo";
}

<h2>Editar Vehículo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="VehiculoId" />

    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="Marca"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Modelo"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Anio"></label>
                <input asp-for="Anio" class="form-control" type="number" />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Placa"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tipo"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecioPorDia"></label>
                <input asp-for="PrecioPorDia" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="PrecioPorDia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="Disponible">Disponible</option>
                    <option value="Alquilado">Alquilado</option>
                    <option value="Mantenimiento">Mantenimiento</option>
                    <option value="Reservado">Reservado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
        </div>

        <div class="col-md-6 text-center">
            <label>Imagen actual</label>
            <div>
                <img src="~/img/vehiculos/@(Model.Placa?.ToLower()).jpg"
                     alt="Imagen del vehículo"
                     class="img-thumbnail mt-2"
                     style="max-width: 300px; height: auto;"
                     onerror="this.src='@Url.Content("~/img/vehiculos/default.jpg")'" />
            </div>
        </div>
    </div>
</form>