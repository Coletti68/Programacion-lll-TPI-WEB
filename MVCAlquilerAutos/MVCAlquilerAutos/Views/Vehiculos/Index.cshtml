@model List<MVCAlquilerAutos.Models.Vehiculo>

@{
    ViewData["Title"] = "Listado de Vehículos";
}

<h2>Listado de Vehículos</h2>

<a class="btn btn-success mb-3" asp-action="Create">+ Crear Vehículo</a>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Imagen</th>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Placa</th>
            <th>Color</th>
            <th>Tipo</th>
            <th>Precio por Día</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="10" class="text-center text-muted">No hay vehículos registrados.</td>
            </tr>
        }
        else
        {
            foreach (var v in Model)
            {
                <tr>
                    <td>
                        <img src="~/img/vehiculos/@(v.Placa?.ToLower()).jpg"
                             alt="Imagen de @v.Modelo"
                             width="100"
                             height="60"
                             style="object-fit:cover;"
                             onerror="this.src='@Url.Content("~/img/vehiculos/default.jpg")'" />
                    </td>
                    <td>@v.VehiculoId</td>
                    <td>@v.Marca</td>
                    <td>@v.Modelo</td>
                    <td>@v.Placa</td>
                    <td>@v.Color</td>
                    <td>@v.Tipo</td>
                    <td>@v.PrecioPorDia.ToString("C")</td>
                    <td>@v.Estado</td>
                </tr>
            }
        }
    </tbody>
</table>