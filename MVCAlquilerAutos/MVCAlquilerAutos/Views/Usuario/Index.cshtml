@model List<MVCAlquilerAutos.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Listado de Usuarios</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>DNI</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.NombreCompleto</td>
                <td>@usuario.Dni</td>
                <td>@usuario.Email</td>
                <td>@usuario.Telefono</td>
                <td>@(usuario.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@usuario.UsuarioId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@usuario.UsuarioId" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
